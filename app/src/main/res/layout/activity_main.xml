<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="북평여자고등학교"
                android:fontFamily="@font/font"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bukpyeoung Girl's High School"
                android:fontFamily="@font/font"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/noticeButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:background="@drawable/round"
                android:text="공지\n사항"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/schoolscheduleButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:text="학사\n일정"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:fontFamily="@font/font"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mealButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/font"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:text="오늘\n급식"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/clubButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:text="동아리\n소개"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/scheduleButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:text="학급별\n시간표"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gradeButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:text="학교\n소개"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:fontFamily="@font/font"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_live_help_black_24dp"
                android:drawableLeft="@drawable/ic_live_help_black_24dp"
                android:gravity="center"
                android:text=" 어플리케이션 정보"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/font"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
